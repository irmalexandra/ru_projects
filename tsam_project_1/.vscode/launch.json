    "version": "0.2.0",
    "configurations": [
        {
            "name": "Client",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/client",
            "args": ["localhost"],
            "stopAtEntry": true,
            "cwd": "${fileDirname}",
            "environment": [],
