        {
            "type": "lldb",
            "request": "launch",
            "name": "Server",
            // "program": "${workspaceFolder}/${fileBasenameNoExtension}",
            "program": "${workspaceFolder}/server",
            "args": ["5000"],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}"
        }
    ]
